<Window
    x:Class="Soldering_Mgmt.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Soldering Login">
    <Grid>
        <!-- 3열 정의 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <!-- 1행 정의 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <!--Border Grid.Row="0" Grid.Column="0" BorderBrush="Red" BorderThickness="2"  Margin="150,150,0,0"-->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="120,50,0,0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top"   Width="400"  Margin="250,10,0,0">
                <TextBlock Text="EasySoldering System" FontSize="30" Foreground="LightBlue" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="0"  Margin="150,0,0,0">
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="LightGray"   Width="200" Height="110">
              <!--Image Source="img/gaon-logo-black_ko.png"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="170" Height="Auto"  Margin="10,0,0,0"/-->
              <Image  x:Name="LogoImage" Stretch="Uniform"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="170" Height="Auto"  Margin="10,0,0,0"/>
          </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="1"  Margin="0,70,0,0">
            <StackPanel Orientation=" Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,66,0,0">
                    <TextBlock Text="LOGIN ID  " FontSize="20" FontWeight="Bold" Margin="10,14,0,0"/>
                    <TextBox x:Name="UserIdBox"  Background="LightGray" Width="200" BorderThickness="2" Margin="10,10,0,0"  KeyDown="InputBox_KeyDown"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" >
                    <TextBlock Text="Password " FontSize="20" FontWeight="Bold" Margin="10,14,0,0"/>
                    <PasswordBox x:Name="PasswordBox"  Background="LightGray" Width="200" BorderThickness="2" Margin="10,12,0,0" KeyDown="InputBox_KeyDown"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Margin="0,70,0,0">
            <StackPanel Orientation=" Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button x:Name="LoginBtn" Content="Login" Click="Login_Click" Background="Gray" Foreground="White" Margin="0,68,0,0" Width="140" Height="110" FontSize="30" />
            </StackPanel>
        </Border>
    </Grid>
</Window>

